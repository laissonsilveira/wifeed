db.respostas.aggregate([
   {
      "$group":{
         "_id":{
            "per":"$pergunta",
            "res":"$resposta"
         },
         "respostaCount":{
            "$sum":1
         }
      }
   },
   {
      "$group":{
         "_id":"$_id.per",
         "respostas":{
            "$push":{
               "resposta":"$_id.res",
               "count":"$respostaCount"
            }
         },
         "count":{
            "$sum":"$respostaCount"
         }
      }
   },
   {
      "$sort":{
         "count":-1
      }
   }
])

